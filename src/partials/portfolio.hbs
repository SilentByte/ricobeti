{{!-- Portfolio --}}
<div class="container">
    <div id="portfolio" class="section">
        <h2 class="center-align">{{@root.site.sections.portfolio.title}}</h2>
        <div class="row">
            <div class="col s0 m1"></div>
            {{#each projects.primary}}
                <div class="col s12 m5">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator"
                                 src="./images/projects/{{image}}"
                                 title="{{title}}"
                                 alt="{{title}}">
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">
                                {{{mdi title}}}<i class="material-icons right">more_vert</i>
                            </span>
                            {{{md short}}}
                            <p class="center-align vspace-small grey-text">
                                {{#each tags}}
                                    <span class="slim-margin">#{{{mdi this}}}</span>
                                {{/each}}
                            </p>
                        </div>
                        {{#if url}}
                            <div class="card-action">
                                {{{mdi url}}}
                            </div>
                        {{/if}}
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">
                                {{{mdi title}}}<i class="material-icons right">close</i>
                            </span>
                            {{{md long}}}
                        </div>
                    </div>
                </div>
            {{/each}}
            <div class="col s0 m1"></div>
        </div>
        <div class="row">
            {{#each projects.secondary}}
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator"
                                 src="./images/projects/{{image}}"
                                 title="{{title}}"
                                 alt="{{title}}">
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">
                                {{{mdi title}}}<i class="material-icons right">more_vert</i>
                            </span>
                            {{{md short}}}
                            <p class="center-align vspace-small grey-text">
                                {{#each tags}}
                                    <span class="slim-margin">#{{{mdi this}}}</span>
                                {{/each}}
                            </p>
                        </div>
                        {{#if url}}
                            <div class="card-action">
                                {{{mdi url}}}
                            </div>
                        {{/if}}
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">
                                {{title}}<i class="material-icons right">close</i>
                            </span>
                            {{{md long}}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>